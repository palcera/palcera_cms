{
    "name": "palcera/palcera_cms",
    "version": "1.0.0-alpha4",
    "description": "Palcera CMS - Drupal CMS extended with Schema.org, AI-ready content, and enhanced security.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/palcera/palcera_cms",
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "require": {
        "cweagans/composer-patches": "^2.0",
        "drupal/cms": "^2.0",
        "drush/drush": "^13.7",
        "palcera/palcera_base": "^1.0"
    },
    "require-dev": {
        "drupal/devel": "^5.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "alpha",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "drupal/core-recipe-unpack": true,
            "drupal/core-vendor-hardening": true,
            "php-http/discovery": true
        },
        "bin-dir": "vendor/bin",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/example.gitignore": false
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "./drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/profiles/custom/{$name}": ["type:drupal-custom-profile"],
            "./recipes/{$name}": ["type:drupal-recipe"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        },
        "drupal-core-project-message": {
            "include-keys": ["homepage"],
            "post-create-project-cmd-message": [
                "<bg=magenta;fg=white>                                                         </>",
                "<bg=magenta;fg=white>  Congratulations, you've installed Palcera CMS!         </>",
                "<bg=magenta;fg=white>  Built on Drupal CMS with Schema.org & AI-ready content </>",
                "<bg=magenta;fg=white>                                                         </>"
            ]
        },
        "drupal-core-vendor-hardening": {
            "composer/composer": false
        },
        "patches": {
            "drupal/cms": {
                "Add Palcera branding to installer": "patches/palcera-branding.patch"
            }
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@setup-installer-profile"
        ],
        "post-update-cmd": [
            "@setup-installer-profile"
        ],
        "setup-installer-profile": [
            "[ -L web/profiles/drupal_cms_installer ] || ln -sf ../../vendor/drupal/cms/web/profiles/drupal_cms_installer web/profiles/drupal_cms_installer",
            "cp assets/palcera-logo.svg vendor/drupal/cms/web/profiles/drupal_cms_installer/theme/images/"
        ]
    }
}
